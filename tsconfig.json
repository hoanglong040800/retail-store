{
  "compilerOptions": {
    "target": "es2016",

    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": "src",
    "outDir": "./dist",
    "paths": {
      "entities/*": ["entities/*"],
      "utils/*": ["utils/*"],
      "constants/*": ["constants/*"],
      "modules/*": ["modules/*"],
      "interfaces/*": ["interfaces/*"]
    },
    "types": ["node", "express", "./src/interfaces/express.d.ts"],

    "strict": true,

    // fix typeorm entity erros
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  }
}
