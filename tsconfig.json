{
  "compilerOptions": {
    "target": "es2016",

    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": "src",
    "outDir": "./dist",
    "paths": {
      "entities/*": ["entities/*"],
      "utils/*": ["utils/*"],
      "constants/*": ["constants/*"],
      "modules/*": ["modules/*"]
    },

    "strict": true,

    // fix typeorm entity erros
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  }
}
